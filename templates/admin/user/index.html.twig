{% extends '/admin/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="card mt-1 m-4 p-3">
        <h1>Utilisateurs</h1>

        <table class="table table-dark mt-4">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                    <td>
                        <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">Voir</a>
                        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success mw-25 fit-content" href="{{ path('app_admin_user_new') }}">Cr√©er un nouvel utilisateur</a>
    </div>
{% endblock %}
