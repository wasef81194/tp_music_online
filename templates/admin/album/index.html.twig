{% extends 'admin/base.html.twig' %}

{% block title %}Album index{% endblock %}

{% block body %}
    <div class="card mt-1 m-4 p-3">
        
        <h1>Albums</h1>

        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for album in albums %}
                <tr>
                    <td>{{ album.id }}</td>
                    <td>{{ album.nom }}</td>
                    <td>
                        <a href="{{ path('app_admin_album_show', {'id': album.id}) }}">Voir</a>
                        <a href="{{ path('app_admin_album_edit', {'id': album.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success fit-content" href="{{ path('app_admin_album_new') }}">Nouvelle album</a>
    </div>
{% endblock %}
